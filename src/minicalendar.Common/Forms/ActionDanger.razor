<div class="mt-8 flex flex-col sm:flex-row">
    <div class="grow">
        <h3 class="text-lg mb-1 font-normal">@Title</h3>
        <div class="text-gray-500 mb-2">@ChildContent</div>
    </div>
    <div>
        <button @onclick="HandleClickAsync"
                class="mt-2 py-2 px-4 ring-1 ring-red-500 rounded-md text-red-600
            focus:outline-none 
            enabled:hover:bg-red-600 enabled:hover:text-white 
            disabled:text-red-300 disabled:ring-red-300"
                disabled="@Disabled"
        >@(string.IsNullOrEmpty(Text) ? Title : Text)</button>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;

    [Parameter] public string Text { get; set; } = string.Empty;

    [Parameter] public bool? Disabled { get; set; } = false;

    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public EventCallback OnClickAsync { get; set; }

    private async Task HandleClickAsync()
    {
        await OnClickAsync.InvokeAsync();
    }
}